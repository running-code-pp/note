#!/usr/bin/env python3
"""
Note Management System Entry Point

Simple wrapper script to run the CLI without specifying the full module path.
"""

import sys
import os

# Add the current directory to the path so we can import the CLI module
sys.path.insert(0, os.path.dirname(os.path.abspath(__file__)))

from cli import main

if __name__ == "__main__":
    main()